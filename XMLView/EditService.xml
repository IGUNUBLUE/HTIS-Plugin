<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="basic" numcolumns="12">
            <column name="customer" order="100">
               <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente" readonly='dinamic'>
                  <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"></values>
               </widget>
            </column>
            <column name="creationdate" numcolumns='2' title="Fecha de entrada" order="120">
                <widget type="date" fieldname="creationdate" readonly='dinamic'/>
            </column>
        </group>
        <group name='details' numcolumns='12'>
            <column name="detail" numcolumns='6' order="130" title='Información sobre el equipo'>
                <widget type="textarea" fieldname="detail" readonly='dinamic'/>
            </column>
            <column name="problem" numcolumns='6' order="130" title='Problema que presenta el equipo'>
                <widget type="textarea" fieldname="problem"/>
            </column>
            <column name="diagnostic" numcolumns="6" order="130" title='Diagnostico realizado'>
                <widget type="textarea" fieldname="diagnostic"/>
            </column>
            <column name="solution" numcolumns="6" order="130" title='Solución del problema'>
                <widget type="textarea" fieldname="description"/>
            </column>
        </group>
        <group name="advanced" numcolumns="12">
            <column name="user" order="100">
               <widget type="select" fieldname="user" required='true' readonly='dinamic'>
                  <values source="users" fieldcode="nick" fieldtitle="nick"></values>
               </widget>
            </column>
            <column name="total" order="110" title='Valor de la mano de obra'>
                <widget type="money" fieldname="total" readonly='dinamic'/>
            </column>
            <column name="exitdate" numcolumns='2' title="Fecha de salida" order="120">
                <widget type="date" fieldname="exitdate" readonly='dinamic'/>
            </column>
            <column name="verified" numcolumns='2' order="120" title='Reparado'>
                <widget type="checkbox" fieldname="verified"/>
            </column>
        </group>
    </columns>
</view>