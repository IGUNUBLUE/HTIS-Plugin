<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" title='ID servicio' order="100">
            <widget type="text" fieldname="idservice" />
        </column>
        <column name="codcliente" display='right' title='ID cliente' order="100">
            <widget type="text" fieldname="codcliente"/>
        </column>
        <column name="name" order="110">
            <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente" readonly='dinamic'>
                <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="creationdate" display="right" title="Fecha de entrada" order="120">
            <widget type="date" fieldname="creationdate"/>
        </column>
         <column name="exitdate" display='right' title="Fecha de salida" order="130">
            <widget type="date" fieldname="exitdate"/>
        </column>
        <column  name="detail" display='none' title='Detalles del equipo' order="140">
            <widget type="textarea" fieldname="detail" readonly='dinamic'/>
        </column>
        <column name="diagnostic" display='right' title='Diagnostico realizado' order="150">
            <widget type="textarea" fieldname="diagnostic"/>
        </column>
        <column name="solution" display='right' title='SoluciÃ³n del problema' order="160">
            <widget type="textarea" fieldname="solution"/>
        </column>
        <column name="user" display='right' title='Tecnico' order="170">
            <widget type="select" fieldname="user" required='true'>
                <values source="users" fieldcode="nick" fieldtitle="nick"></values>
            </widget>
        </column>
        <column name="verified" display='right' title='Reparado' order="180">
            <widget type="checkbox" fieldname="verified"/>
        </column>
        <column name="total" display='right' title='Costo' order="190">
            <widget type="money" fieldname="total"/>
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" fieldname="verified">1</option>
            <option color="warning" fieldname="verified">0</option>
        </row>
    </rows>
</view>